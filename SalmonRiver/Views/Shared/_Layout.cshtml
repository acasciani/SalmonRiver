<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Head Waters Cabins at Salmon River</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,300italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Archivo+Narrow:400,400italic' rel='stylesheet' type='text/css'>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @RenderSection("styles", required: false)

</head>

<body>
        @if (ViewBag.HasHeaderCarousel as bool? ?? false)
        {
            <div id="body">
                <div id="carousel-example-generic" class="carousel slide carousel-fade" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>

                    <div class="site-name">
                        <img alt="Brand" src="/Content/images/logo.png">
                        <div class="accepting-reservations">Now Accepting Reservations</div>
                    </div>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active" style="background-image: url(/Content/images/front1.jpg);">
                            <div class="carousel-caption bottom" style="display: none;">
                                A brand new, state of the art facility with 4 bedrooms, 4 baths, a common room, a kitchen and walk out lake view.
                            </div>
                        </div>
                        <div class="item" style="background-image: url(/Content/images/front2.jpg);">
                            <div class="carousel-caption bottom" style="display: none;">
                                Named one of the top sportfishing destinations in the state of New York.
                            </div>
                        </div>
                        <div class="item" style="background-image: url(/Content/images/front4.jpg);">
                            <div class="carousel-caption top" style="display: none;">
                                Check out some of the best catches from our guests.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="header-site">
            <nav class="navbar navbar-default top" style="">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">
                            <img alt="Brand" src="~/Content/images/logo.png" height="100%">
                        </a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li class="link@(ViewBag.ActiveHeader == "Home" ? " active" : "")">@Html.ActionLink("Welcome", "Index", "Home")</li>
                            <li class="link@(ViewBag.ActiveHeader == "Amenities" ? " active" : "")">@Html.ActionLink("Amenities", "Amenities", "Home")</li>
                            <li class="link@(ViewBag.ActiveHeader == "Photos" ? " active" : "")">@Html.ActionLink("Photos", "Photos", "Home")</li>
                            <li class="link@(ViewBag.ActiveHeader == "Contact" ? " active" : "")">@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>

                        @if (User.Identity.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()
                                <ul class="nav navbar-nav navbar-right">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li class="dropdown link">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administrate <span class="caret"></span></a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    @Html.ActionLink("Manage Dates", "Index", "Dates")
                                                </li>
                                            </ul>
                                        </li>
                                    }




                                    <li class="login-link link">
                                        <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
                                    </li>

                                </ul>
                            }
                        }

                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </div>

        @RenderBody()


        <footer>
            <div class="container">
                <div class="row hidden-xs">
                    <div class="col-sm-8">
                        2358 County Rt. 22, Altmar, New York 13302 | <a href="tel:+15857374709">(585) 737-4709</a>
                    </div>

                    <div class="col-sm-4 text-right">
                        <a href="#">Terms of Service</a> | <a href="#">Policies</a>
                    </div>
                </div>

                <div class="row visible-xs">
                    <div class="col-xs-12 text-center">
                        2358 County Rt. 22, Altmar, New York 13302 | <a href="tel:+15857374709">(585) 737-4709</a>
                    </div>

                    <div class="col-xs-12 text-center">
                        <a href="#">Terms of Service</a> | <a href="#">Policies</a>
                    </div>
                </div>
            </div>
        </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
